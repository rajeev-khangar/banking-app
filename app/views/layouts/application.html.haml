!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title NewAssignment
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .navbar-header
        %a.navbar-brand{:href => "#"} Assignment
      %ul.nav.navbar-nav.pull-right
        - if current_manager
          %li= link_to 'Users', users_path
          %li= link_to 'SignOut',  destroy_manager_session_path,{method: :delete}
        - else
          %li= link_to 'Login',  new_manager_session_path, class: "glyphicon glyphicon-log-in"
          %li= link_to 'SignUp', new_manager_registration_path, class: "glyphicon glyphicon-user"
    .top-container
      = render partial: "shared/flash_messages"
      .container
        = yield
